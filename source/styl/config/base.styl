*, *::before, *::after
	box-sizing border-box

body
	color $textColor
	font-family $contentFont
	font-weight $contentWeight
	font-size $fontSize
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	-moz-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

h1, h2, h3, h4, h5, h6 
	// color $headingColor
	font-family $headingFont
	font-weight $headingWeight
	//margin 0
	//padding 0
a 
	color currentColor
	text-decoration none

input, textarea, select, button
	box-sizing border-box
	color $textColor
	font-size 100%
	font-weight $normal
	font-family $contentFont

button
	background transparent
	border 0
	box-sizing border-box
	color $textColor
	cursor pointer
	font-weight $normal
	font-family $contentFont
	outline 0
	padding 0
	text-align center
	
figure
	margin 0
	padding 0

img
	max-width 100%

form
	margin auto
	$cor = $baseColor
	$margem = 15px

	.field
		// float left
		position relative
		
		&.select
			select, span
				position absolute
				top 0
				left 0
			
			select
				-webkit-appearance none
				-moz-appearance none
				appearance none
				cursor pointer
				opacity 0
				z-index 10

		&.error
			input, select, span, textarea, .trigger
				border-color #f00
				//background #f6ecec
				//padding-left 2px
			
			&::before, &::after
				opacity 1
				visibility visible	
	
	input, select, textarea
		border none
		box-sizing border-box
		display block
		padding 2px
		position relative
		transition all 100ms
		width 100%
		height 100%
		
		&:focus
			outline none
	
	button
		appearance none
		background transparent
		box-sizing border-box
	
	textarea
		resize none
	
.clearfix
	clearfix()
	